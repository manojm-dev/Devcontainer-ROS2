{
	"name": "ROS2: humble",
	"dockerComposeFile": ["compose.yml"],
	"service":"ros2",

	"shutdownAction": "stopCompose",
	"workspaceFolder": "/root/ws/",

    "forwardPorts": [],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-themes",
				"twxs.cmake",
				"donjayamanne.python-extension-pack",
				"eamodio.gitlens",
				"ms-iot.vscode-ros",
				"ms-azuretools.vscode-docker",
				"ms-vscode.cmake-tools"
			]
		}
	},
	"postCreateCommand": "echo 'source /opt/ros/humble/setup.bash' >> ~/.bashrc && echo 'export PATH="/opt/venv/bin:$PATH"' >> ~/.bashrc && rosdep install --from-paths src --ignore-src --rosdistro humble -y && colcon build && echo 'source /ws/install/setup.bash' >> ~/.bashrc"
}